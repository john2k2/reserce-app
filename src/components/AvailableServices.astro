---
const services = [
  { 
    id: "S001",
    type: "Concierto", 
    location: "Movistar Arena", 
    price: "$25.000", 
    disponibility: "Inmediata" 
  },
  { 
    id: "S002",
    type: "Banco", 
    location: "Bancolombia Centro", 
    price: "$15.000", 
    disponibility: "En 2 horas" 
  },
  { 
    id: "S003",
    type: "Tr치mite", 
    location: "Registro Civil", 
    price: "$20.000", 
    disponibility: "Ma침ana" 
  }
];
---

<div class="bg-white dark:bg-gray-800 rounded-lg p-4 sm:p-6 shadow-sm">
  <h2 class="text-xl font-semibold mb-4 dark:text-gray-100">Servicios disponibles</h2>
  
  <!-- Tabla visible en tablets y desktop -->
  <div class="hidden sm:block overflow-x-auto">
    <table class="w-full">
      <thead>
        <tr class="bg-[#F5F7FF] dark:bg-gray-700">
          <th class="py-3 px-4 text-left text-sm font-medium text-gray-700 dark:text-gray-200 rounded-l-lg">Tipo</th>
          <th class="py-3 px-4 text-left text-sm font-medium text-gray-700 dark:text-gray-200">Ubicaci칩n</th>
          <th class="py-3 px-4 text-left text-sm font-medium text-gray-700 dark:text-gray-200">Precio</th>
          <th class="py-3 px-4 text-left text-sm font-medium text-gray-700 dark:text-gray-200 rounded-r-lg">Disponibilidad</th>
        </tr>
      </thead>
      <tbody>
        {services.map((service, index) => (
          <tr 
            class="border-b border-gray-100 dark:border-gray-700 last:border-0 hover:bg-gray-50 dark:hover:bg-gray-700 cursor-pointer" 
            onclick={`window.location.href='/service/${service.id}'`}
          >
            <td class="py-3 px-4 text-gray-800 dark:text-gray-200">{service.type}</td>
            <td class="py-3 px-4 text-gray-800 dark:text-gray-200">{service.location}</td>
            <td class="py-3 px-4 text-gray-800 dark:text-gray-200">{service.price}</td>
            <td class="py-3 px-4 text-gray-800 dark:text-gray-200">{service.disponibility}</td>
          </tr>
        ))}
      </tbody>
    </table>
  </div>
  
  <!-- Vista de tarjetas para m칩vil -->
  <div class="sm:hidden space-y-3">
    {services.map((service) => (
      <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-3 bg-white dark:bg-gray-800 hover:shadow-md cursor-pointer"
        onclick={`window.location.href='/service/${service.id}'`}>
        <div class="flex justify-between items-start">
          <h3 class="font-medium text-gray-800 dark:text-gray-200">{service.type}</h3>
          <span class="text-sm font-medium text-green-600 dark:text-green-400">{service.disponibility}</span>
        </div>
        <p class="text-sm text-gray-700 dark:text-gray-300 mt-1">{service.location}</p>
        <div class="flex justify-between items-center mt-2">
          <span class="font-medium text-gray-800 dark:text-gray-200">{service.price}</span>
          <button class="text-primary text-sm dark:text-blue-400">
            Reservar
          </button>
        </div>
      </div>
    ))}
  </div>
  
  <div class="mt-4 sm:mt-4 text-right">
    <a href="/services" class="text-primary hover:underline hover:text-primary-dark dark:text-blue-400 dark:hover:text-blue-300">Ver todos los servicios</a>
  </div>
</div> 