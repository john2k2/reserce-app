---
// Reusable form input component
interface Props {
  type?: 'text' | 'email' | 'password' | 'search' | 'number';
  name: string;
  id?: string;
  value?: string;
  placeholder?: string;
  label?: string;
  required?: boolean;
  disabled?: boolean;
  autocomplete?: string;
  class?: string;
}

const {
  type = 'text',
  name,
  id = name,
  value = '',
  placeholder = '',
  label,
  required = false,
  disabled = false,
  autocomplete,
  class: className = '',
} = Astro.props;

const baseClasses = "w-full px-3 py-2 border rounded-md dark:bg-gray-700 dark:border-gray-600 focus:ring-2 focus:ring-primary focus:border-transparent transition-colors duration-200";
---

<div class="w-full">
  {label && (
    <label for={id} class="block text-sm font-medium mb-1">
      {label}
      {required && <span class="text-red-500 ml-1">*</span>}
    </label>
  )}
  
  <input
    type={type}
    id={id}
    name={name}
    value={value}
    placeholder={placeholder}
    required={required}
    disabled={disabled}
    autocomplete={autocomplete}
    class={`${baseClasses} ${className}`}
  />
</div> 