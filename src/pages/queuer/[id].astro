---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Sidebar from '../../components/Sidebar.astro';

// Obtener el ID del queuer de los parámetros
const { id } = Astro.params;

// Función requerida para rutas dinámicas en Astro
export function getStaticPaths() {
  return [
    { params: { id: 'Q001' } },
    { params: { id: 'Q002' } },
    { params: { id: 'Q003' } },
    { params: { id: 'Q004' } },
  ];
}

// En una implementación real, estos datos se obtendrían de una API
// basado en los parámetros de la URL
const queuerData = {
  id: "Q001",
  name: "Carlos Mendoza",
  avatar: "/avatars/carlos.jpg",
  rating: 4.8,
  speciality: "Conciertos, Eventos deportivos",
  completedQueues: 126,
  city: "Bogotá",
  phone: "+57 300 123 4567",
  email: "carlos@queuemaster.com",
  experience: "2 años",
  age: 28,
  languages: ["Español", "Inglés"],
  priceRange: "$20.000 - $30.000",
  availability: "Lunes a domingo, 8am-10pm",
  bio: "Experto en hacer filas para eventos de gran magnitud. Tengo amplia experiencia en conciertos y eventos deportivos. Me caracterizo por ser puntual y paciente. Siempre llego con anticipación para asegurar los mejores lugares en la fila.",
  reviews: [
    {
      user: "Andrea López",
      avatar: "/avatars/user1.jpg",
      date: "10 de julio, 2023",
      rating: 5.0,
      comment: "Excelente servicio. Carlos llegó 4 horas antes del concierto y gracias a él pude entrar rápidamente. Muy recomendado."
    },
    {
      user: "Miguel Ramírez",
      avatar: "/avatars/user2.jpg",
      date: "5 de junio, 2023",
      rating: 4.5,
      comment: "Muy buen servicio, puntual y mantiene informado todo el tiempo. Haría una reserva con él nuevamente."
    },
    {
      user: "Laura Sánchez",
      avatar: "/avatars/user3.jpg",
      date: "22 de mayo, 2023",
      rating: 5.0,
      comment: "Carlos es muy profesional. Hizo la fila para un trámite que normalmente toma todo el día y yo solo tuve que llegar al final. ¡Valió cada peso!"
    }
  ],
  services: [
    { type: "Concierto", location: "Movistar Arena", price: "$25.000" },
    { type: "Evento deportivo", location: "Estadio El Campín", price: "$22.000" },
    { type: "Festival", location: "Parque Simón Bolívar", price: "$30.000" }
  ]
};
---

<Layout>
  <div class="container mx-auto p-4 dark:text-gray-200">
    <Header />
    
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-6">
      <!-- Sidebar - oculto en móvil -->
      <div class="hidden lg:block lg:col-span-3">
        <Sidebar />
      </div>
      
      <!-- Botón para mostrar sidebar en móvil y tablet -->
      <button id="mobile-menu-button" class="fixed bottom-4 right-4 lg:hidden bg-primary text-white p-3 rounded-full shadow-lg z-50">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="3" y1="12" x2="21" y2="12"></line>
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <line x1="3" y1="18" x2="21" y2="18"></line>
        </svg>
      </button>

      <!-- Modal del Sidebar para móvil y tablet -->
      <div id="mobile-menu" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden">
        <div class="absolute right-0 top-0 h-full w-64 bg-white dark:bg-gray-800 transform transition-transform duration-300 ease-in-out translate-x-full">
          <button id="close-menu" class="absolute top-4 right-4 text-gray-500 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-100">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="18" y1="6" x2="6" y2="18"></line>
              <line x1="6" y1="6" x2="18" y2="18"></line>
            </svg>
          </button>
          <div class="p-4 h-full overflow-y-auto">
            <Sidebar />
          </div>
        </div>
      </div>
      
      <div class="col-span-1 lg:col-span-9">
        <!-- Encabezado del perfil -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm overflow-hidden mb-6">
          <div class="h-32 sm:h-48 bg-gradient-to-r from-blue-500 to-primary relative">
            <div class="absolute bottom-0 left-0 w-full px-4 sm:px-6 py-4 flex flex-col sm:flex-row sm:items-end">
              <div class="w-20 h-20 sm:w-32 sm:h-32 rounded-full border-4 border-white dark:border-gray-800 overflow-hidden mb-2 sm:mb-0 sm:mr-4 bg-white dark:bg-gray-700 mx-auto sm:mx-0">
                <img 
                  src={queuerData.avatar}
                  alt={queuerData.name}
                  class="w-full h-full object-cover"
                  onerror="this.src='/avatars/default.jpg'; this.onerror=null;"
                />
              </div>
              <div class="text-center sm:text-left mb-2 sm:mb-4">
                <h1 class="text-xl sm:text-2xl font-bold text-white">{queuerData.name}</h1>
                <div class="flex items-center justify-center sm:justify-start text-white/90 flex-wrap">
                  <span class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor" stroke="none" class="text-yellow-400">
                      <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                    </svg>
                    <span class="ml-1">{queuerData.rating}</span>
                  </span>
                  <span class="mx-2">•</span>
                  <span>{queuerData.completedQueues} servicios</span>
                  <span class="mx-2">•</span>
                  <span>{queuerData.city}</span>
                </div>
              </div>
            </div>
            <div class="absolute top-4 right-4">
              <a href="/" class="bg-white/20 backdrop-blur-sm text-white p-2 rounded-full hover:bg-white/30">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <line x1="19" y1="12" x2="5" y2="12"></line>
                  <polyline points="12 19 5 12 12 5"></polyline>
                </svg>
              </a>
            </div>
          </div>
          
          <div class="p-4 sm:p-6">
            <div class="flex flex-col sm:flex-row sm:items-center space-y-2 sm:space-y-0 sm:space-x-4 mb-4">
              <a href={`tel:${queuerData.phone}`} class="flex items-center justify-center sm:justify-start text-primary hover:underline dark:text-blue-400 dark:hover:text-blue-300">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-1">
                  <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                </svg>
                {queuerData.phone}
              </a>
              <a href={`mailto:${queuerData.email}`} class="flex items-center justify-center sm:justify-start text-primary hover:underline dark:text-blue-400 dark:hover:text-blue-300">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-1">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                  <polyline points="22,6 12,13 2,6"></polyline>
                </svg>
                {queuerData.email}
              </a>
            </div>
            
            <div class="border-t border-gray-100 dark:border-gray-700 pt-4">
              <h2 class="text-lg font-semibold mb-2 dark:text-gray-100">Acerca de {queuerData.name}</h2>
              <p class="text-gray-700 dark:text-gray-300 mb-4">{queuerData.bio}</p>
              
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 sm:gap-4 mb-4">
                <div>
                  <h3 class="text-sm font-medium text-gray-600 dark:text-gray-400">Especialidad</h3>
                  <p class="dark:text-gray-300">{queuerData.speciality}</p>
                </div>
                <div>
                  <h3 class="text-sm font-medium text-gray-600 dark:text-gray-400">Experiencia</h3>
                  <p class="dark:text-gray-300">{queuerData.experience}</p>
                </div>
                <div>
                  <h3 class="text-sm font-medium text-gray-600 dark:text-gray-400">Tarifas</h3>
                  <p class="dark:text-gray-300">{queuerData.priceRange}</p>
                </div>
                <div>
                  <h3 class="text-sm font-medium text-gray-600 dark:text-gray-400">Disponibilidad</h3>
                  <p class="dark:text-gray-300">{queuerData.availability}</p>
                </div>
                <div>
                  <h3 class="text-sm font-medium text-gray-600 dark:text-gray-400">Edad</h3>
                  <p class="dark:text-gray-300">{queuerData.age} años</p>
                </div>
                <div>
                  <h3 class="text-sm font-medium text-gray-600 dark:text-gray-400">Idiomas</h3>
                  <p class="dark:text-gray-300">{queuerData.languages.join(", ")}</p>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Servicios ofrecidos -->
        <div class="bg-white dark:bg-gray-800 rounded-lg p-4 sm:p-6 shadow-sm mb-6">
          <h2 class="text-xl font-semibold mb-4 dark:text-gray-100">Servicios ofrecidos</h2>
          
          <!-- Tabla visible en tablets y desktop -->
          <div class="hidden sm:block overflow-x-auto">
            <table class="w-full">
              <thead>
                <tr class="bg-[#F5F7FF] dark:bg-gray-700">
                  <th class="py-3 px-4 text-left text-sm font-medium text-gray-700 dark:text-gray-200 rounded-l-lg">Tipo</th>
                  <th class="py-3 px-4 text-left text-sm font-medium text-gray-700 dark:text-gray-200">Ubicación</th>
                  <th class="py-3 px-4 text-left text-sm font-medium text-gray-700 dark:text-gray-200 rounded-r-lg">Precio</th>
                </tr>
              </thead>
              <tbody>
                {queuerData.services.map(service => (
                  <tr class="border-b border-gray-100 dark:border-gray-700 last:border-0 hover:bg-gray-50 dark:hover:bg-gray-700">
                    <td class="py-3 px-4 text-gray-800 dark:text-gray-200">{service.type}</td>
                    <td class="py-3 px-4 text-gray-800 dark:text-gray-200">{service.location}</td>
                    <td class="py-3 px-4 text-gray-800 dark:text-gray-200">{service.price}</td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
          
          <!-- Vista de tarjetas para móvil -->
          <div class="sm:hidden space-y-3">
            {queuerData.services.map(service => (
              <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-3 bg-white dark:bg-gray-800">
                <div class="flex justify-between items-center">
                  <h3 class="font-medium text-gray-800 dark:text-gray-200">{service.type}</h3>
                  <span class="font-medium text-primary dark:text-blue-400">{service.price}</span>
                </div>
                <p class="text-sm text-gray-700 dark:text-gray-300 mt-1">{service.location}</p>
              </div>
            ))}
          </div>
          
          <div class="mt-6 text-center">
            <a href={`/messages/${queuerData.id}`} class="bg-primary text-white px-4 py-2 rounded-lg hover:bg-primary-dark transition-colors inline-flex items-center justify-center w-full sm:w-auto">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2">
                <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
              </svg>
              Contactar
            </a>
          </div>
        </div>
        
        <!-- Reseñas y comentarios -->
        <div class="bg-white dark:bg-gray-800 rounded-lg p-4 sm:p-6 shadow-sm">
          <h2 class="text-xl font-semibold mb-4 dark:text-gray-100">Reseñas</h2>
          
          <div class="space-y-4 sm:space-y-6">
            {queuerData.reviews.map(review => (
              <div class="border-b border-gray-100 dark:border-gray-700 last:border-0 pb-4 sm:pb-6 last:pb-0">
                <div class="flex flex-col sm:flex-row sm:items-start">
                  <div class="w-10 h-10 rounded-full overflow-hidden mx-auto sm:mx-0 mb-2 sm:mb-0 sm:mr-3 bg-gray-200 dark:bg-gray-700">
                    <img 
                      src={review.avatar} 
                      alt={review.user} 
                      class="w-full h-full object-cover"
                      onerror="this.src='/avatars/default.jpg'; this.onerror=null;"
                    />
                  </div>
                  <div class="flex-1">
                    <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start">
                      <div class="text-center sm:text-left">
                        <p class="font-medium dark:text-gray-200">{review.user}</p>
                        <p class="text-xs text-gray-500 dark:text-gray-400">{review.date}</p>
                      </div>
                      <div class="flex items-center justify-center sm:justify-start mt-1 sm:mt-0">
                        <span class="text-yellow-500">{review.rating}</span>
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="currentColor" stroke="none" class="ml-1 text-yellow-500">
                          <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                        </svg>
                      </div>
                    </div>
                    <p class="text-gray-700 dark:text-gray-300 mt-2 text-center sm:text-left">{review.comment}</p>
                  </div>
                </div>
              </div>
            ))}
          </div>
          
          <div class="mt-6 text-center">
            <a href="#" class="text-primary hover:underline dark:text-blue-400 dark:hover:text-blue-300">Ver todas las reseñas</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  // Script para manejar el menú móvil
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    const closeMenu = document.getElementById('close-menu');
    
    if (mobileMenuButton && mobileMenu && closeMenu) {
      mobileMenuButton.addEventListener('click', () => {
        mobileMenu.classList.remove('hidden');
        const sidebar = mobileMenu.querySelector('div');
        if (sidebar) {
          sidebar.classList.add('translate-x-0');
          sidebar.classList.remove('translate-x-full');
        }
      });
      
      closeMenu.addEventListener('click', () => {
        const sidebar = mobileMenu.querySelector('div');
        if (sidebar) {
          sidebar.classList.remove('translate-x-0');
          sidebar.classList.add('translate-x-full');
          setTimeout(() => {
            mobileMenu.classList.add('hidden');
          }, 300);
        }
      });
      
      // Cerrar menú al hacer clic fuera del sidebar
      mobileMenu.addEventListener('click', (e) => {
        if (e.target === mobileMenu) {
          const sidebar = mobileMenu.querySelector('div');
          if (sidebar) {
            sidebar.classList.remove('translate-x-0');
            sidebar.classList.add('translate-x-full');
            setTimeout(() => {
              mobileMenu.classList.add('hidden');
            }, 300);
          }
        }
      });
    }
  });
</script> 