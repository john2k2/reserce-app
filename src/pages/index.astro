---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Sidebar from '../components/Sidebar.astro';
import CurrentQueue from '../components/CurrentQueue.astro';
import AvailableServices from '../components/AvailableServices.astro';
import FeaturedQueuers from '../components/FeaturedQueuers.astro';
import ReservationHistory from '../components/ReservationHistory.astro';
---

<Layout>
  <div class="container mx-auto p-4">
    <Header />
    
    <div class="grid grid-cols-12 gap-6">
      <div class="col-span-3">
        <Sidebar />
      </div>
      
      <div class="col-span-9">
        <div class="grid grid-cols-2 gap-6 mb-6">
          <CurrentQueue />
          <AvailableServices />
        </div>
        
        <FeaturedQueuers />
        
        <div class="mt-6">
          <ReservationHistory />
        </div>
      </div>
    </div>
  </div>
</Layout>